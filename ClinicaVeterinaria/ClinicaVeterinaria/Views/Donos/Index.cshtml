@model IEnumerable<ClinicaVeterinaria.Models.Donos>

@{
    ViewBag.Title = "Tabela dos Donos";
}

<h2>Donos</h2>

<p>

    @if (User.IsInRole("Funcionarios"))
    {
    @Html.ActionLink("Novo Dono", "Create")
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NIF)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NIF)
        </td>
        <td>
        @if (User.Identity.IsAuthenticated)
        {
            <div>
                @Html.ActionLink("Editar", "Edit", new { id = item.DonoID }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.DonoID }) |
                @Html.ActionLink("Apagar", "Delete", new { id = item.DonoID })
            </div>
        }
        </td>
    </tr>
}

</table>
