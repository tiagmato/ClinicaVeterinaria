@model ClinicaVeterinaria.Models.Donos

@{
    ViewBag.Title = "Detalhes";
}

<h2>Detalhes</h2>

<div>
    <h4>Donos</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NIF)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NIF)
        </dd>

    </dl>
</div>

@* Listar os Animais associados ao Dono*@
<div>
    <table class="table" >
        <tr>
            <th>Nome</th>
            <th>Raça</th>
        </tr>
        @foreach(var animal in Model.ListaDeAnimais)
        {
            <tr>
                <td>@animal.Nome</td>
                <td>@animal.Raca</td>
            </tr>
        }
    </table>

</div>

<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.DonoID }) |
    @Html.ActionLink("Regressar à lista", "Index")
</p>
